global gSpriteManagerproperty myStartX, myStartY,myNum,myNum2,myCounter,myDuration,myParentproperty myLocVon new me,_Duration,_text,_myParent  myDuration = _Duration  myText =_text  myCounter = 0  myNum = 48  myNum2 = 49  myLocV = 100  if sprite(myNum).puppet = true then     myNum = 46    myNum = 47    myLocV = 130  end if  sprite(myNum).puppet = true  sprite(myNum2).puppet = true  add the actorlist (me)  sprite(myNum).member = member("T_OverScreen")  sprite(myNum2).member = member("T_OverScreen2")  sprite(myNum).LocZ =1000  sprite(myNum2).LocZ =999  sprite(myNum).ink =36  sprite(myNum2).ink =36  member("T_OverScreen").text =myText  member("T_OverScreen2").text =myText  myParent = _myParent  return meendon stepframe me  myCounter = myCounter +1  if myCounter >myDuration then    deleteone the actorlist (me)    sprite(myNum).puppet = false    sprite(myNum).puppet = false    myParent.TextFinished(me)  end if  myLocV = myLocV +2  sprite(myNum).LocH =180  sprite(myNum2).LocH =180+2  sprite(myNum).LocV =myLocV  sprite(myNum2).LocV =myLocV+2  blendd = 70-(float(myCounter)/myDuration*100)  if blendd<0 then blendd = 0  sprite(myNum).blend =blendd  sprite(myNum2).blend =blenddendon destroy me  if the actorlist.getpos(me) <>0 then deleteone the actorlist (me)  sprite(myNum).blend =100  sprite(myNum2).blend =100  sprite(myNum).puppet = false  sprite(myNum2).puppet = falseend